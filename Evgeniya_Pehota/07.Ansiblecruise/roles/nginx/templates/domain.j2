server {
    listen       80;
    server_name  "{{ 'domain_ubuntu' if (ansible_distribution == 'Ubuntu') else 'domain_centos' }}" www."{{ 'domain_ubuntu' if (ansible_distribution == 'Ubuntu') else 'domain_centos' }}";
    root {{ default_path }};

    access_log /var/log/nginx/{{ 'domain_ubuntu' if (ansible_distribution == 'Ubuntu') else 'domain_centos' }}_access_log;
    error_log /var/log/nginx/{{ 'domain_ubuntu' if (ansible_distribution == 'Ubuntu') else 'domain_centos' }}_error_log;


    location ~* ^.+\.(jpg|jpeg|gif|png|css|zip|tgz|gz|rar|bz2|doc|docx|xls|xlsx|exe|pdf|ppt|tar|wav|bmp|rtf|js)$ {
            expires modified +1w;
    }
}